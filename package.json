{
  "name": "auctionhub",
  "version": "0.0.3",
  "description": "An auction site for my semester project 2 at Noroff",
  "main": "index.js",
  "scripts": {
    "build": "sass src/scss:dist/css",
    "watch": "sass --watch src/scss:dist/css & live-server",
    "start": "npm run watch",
    "format": "prettier -w src/**/*.js",
    "lint": "eslint src/**/*.js",
    "lint-fix": "eslint src/**/*.js --cache --fix",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RiverMichael/SP2-Auction.git"
  },
  "keywords": [
    "JavaScript",
    "CSS",
    "Bootstrap",
    "SASS",
    "SCSS",
    "Frameworks"
  ],
  "author": "Michael Nilsson <mrn@michaelriver.dev>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/RiverMichael/SP2-Auction/issues"
  },
  "homepage": "https://github.com/RiverMichael/SP2-Auction#readme",
  "dependencies": {
    "bootstrap": "^5.3.2"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "live-server": "^1.2.2",
    "prettier": "^3.1.0",
    "sass": "^1.69.5"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ]
  }
}
